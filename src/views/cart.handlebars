<main class="min-w-full bg-[#fdf6f6] mt-[70px]">
  <h1 class="font-bold">Cart ID: {{cart.id}}</h1>
  <br />
  <br />
  <div class="container">
    {{#each cart.products}}
      <div class="row mb-4">
        <div class="col-2">
          <p>ID: {{this.id}}</p>
        </div>
        <div class="col-3">
          <img
            src="{{this.product.thumbnail}}"
            alt="imagen del producto"
            class="img-fluid"
          />
        </div>
        <div class="col-3">
          <p>Producto: {{this.product.title}}</p>
        </div>
        <div class="col-2">
          <p>Precio: {{this.product.price}}</p>
        </div>
        <div class="col-2">
          <p>Cantidad: {{this.quantity}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</main>